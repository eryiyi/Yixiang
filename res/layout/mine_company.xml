<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/main"
              android:background="@color/gray"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/top"
                    android:layout_height="@dimen/height_top_bar">
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/back"
                   android:onClick="back"
                   android:padding="8dp"
                   android:layout_centerVertical="true"
                   android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="公司介绍"
                  android:textColor="@color/white"
                  android:textSize="18sp"
                  android:layout_centerInParent="true"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <com.xiaogang.yixiang.widget.ReboundScrollView android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="8dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="公司名称"
                  android:padding="5dp"
                  android:id="@+id/company_name"
                  android:textColor="@color/textColor"
                  android:textSize="14sp"
                  android:layout_height="wrap_content"/>
        <EditText android:layout_width="wrap_content"
                  android:layout_weight="1"
                  android:id="@+id/name"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="8dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="联系电话"
                  android:padding="5dp"
                  android:id="@+id/company_tel"
                  android:textColor="@color/textColor"
                  android:textSize="14sp"
                  android:layout_height="wrap_content"/>
        <EditText android:layout_width="wrap_content"
                  android:layout_weight="1"
                  android:id="@+id/tel"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="8dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="联系地址"
                  android:padding="5dp"
                  android:id="@+id/company_address"
                  android:textColor="@color/textColor"
                  android:textSize="14sp"
                  android:layout_height="wrap_content"/>
        <EditText android:layout_width="wrap_content"
                  android:layout_weight="1"
                  android:id="@+id/address"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:padding="8dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="公司介绍"
                  android:padding="5dp"
                  android:id="@+id/company_cont"
                  android:textColor="@color/textColor"
                  android:textSize="14sp"
                  android:layout_height="wrap_content"/>
        <EditText android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:minHeight="80dp"
                  android:id="@+id/jieshao"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
            <TextView android:layout_width="wrap_content"
                      android:text="产品图片"
                      android:padding="5dp"
                      android:id="@+id/company_pic"
                      android:textColor="@color/textColor"
                      android:textSize="14sp"
                      android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="3dp"
                          android:id="@+id/line_one"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:layout_weight="1"
                          android:textSize="14sp"
                          android:id="@+id/textOne"
                          android:hint="产品编号和名称"
                          android:layout_height="wrap_content"/>
                <Button android:layout_width="wrap_content"
                        android:text="上传"
                        android:id="@+id/btnOne"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="3dp"
                          android:id="@+id/line_two"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:layout_weight="1"
                          android:id="@+id/textTwo"
                          android:textSize="14sp"
                          android:hint="产品编号和名称"
                          android:layout_height="wrap_content"/>
                <Button android:layout_width="wrap_content"
                        android:text="上传"
                        android:id="@+id/btnTwo"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="3dp"
                          android:id="@+id/line_three"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:layout_weight="1"
                          android:textSize="14sp"
                          android:id="@+id/textThree"
                          android:hint="产品编号和名称"
                          android:layout_height="wrap_content"/>
                <Button android:layout_width="wrap_content"
                        android:text="上传"
                        android:id="@+id/btnThree"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="3dp"
                          android:id="@+id/line_four"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:layout_weight="1"
                          android:id="@+id/textFour"
                          android:textSize="14sp"
                          android:hint="产品编号和名称"
                          android:layout_height="wrap_content"/>
                <Button android:layout_width="wrap_content"
                        android:text="上传"
                        android:id="@+id/btnFour"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="3dp"
                          android:id="@+id/line_five"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:layout_weight="1"
                          android:textSize="14sp"
                          android:id="@+id/textFive"
                          android:hint="产品编号和名称"
                          android:layout_height="wrap_content"/>
                <Button android:layout_width="wrap_content"
                        android:text="上传"
                        android:id="@+id/btnFive"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <Button android:layout_width="match_parent"
                        android:text="保存"
                        android:padding="15dp"
                        android:onClick="addSave"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:background="@color/red"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </com.xiaogang.yixiang.widget.ReboundScrollView>


</LinearLayout>