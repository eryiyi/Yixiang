<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/gray"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/top"
                    android:layout_height="@dimen/height_top_bar">
        <ImageView android:layout_width="wrap_content"
                  android:src="@drawable/back"
                  android:onClick="back"
                  android:padding="8dp"
                  android:layout_centerVertical="true"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="我的钱包"
                  android:textColor="@color/white"
                  android:textSize="18sp"
                  android:layout_centerInParent="true"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:padding="8dp"
                            android:id="@+id/profile"
                            android:background="#666F76"
                            android:layout_height="wrap_content">
               <LinearLayout android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:id="@+id/line_one"
                             android:layout_height="wrap_content">
                   <ImageView android:layout_width="0dp"
                              android:src="@drawable/yue"
                              android:layout_weight="1"
                              android:layout_height="wrap_content"/>
                   <ImageView android:layout_width="0dp"
                              android:src="@drawable/yinhangka"
                              android:id="@+id/yinhangka_one"
                              android:layout_weight="1"
                              android:layout_height="wrap_content"/>
               </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:padding="8dp"
                              android:id="@+id/line_two"
                              android:layout_below="@+id/line_one"
                              android:layout_height="wrap_content">
                    <TextView android:layout_width="0dp"
                              android:text="余额"
                              android:gravity="center"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"/>
                    <TextView android:layout_width="0dp"
                              android:text="银行卡"
                              android:gravity="center"
                              android:id="@+id/yinhangka_two"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:padding="8dp"
                              android:layout_below="@+id/line_two"
                              android:layout_height="wrap_content">
                    <TextView android:layout_width="0dp"
                              android:text="$1000.00"
                              android:gravity="center"
                              android:id="@+id/yue"
                              android:layout_weight="1"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="0dp"
                              android:gravity="center"
                              android:layout_weight="1"
                              android:id="@+id/yinhangka_three"
                              android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="8dp"
                  android:layout_below="@+id/line_two"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dp"
                  android:text="充值"
                  android:id="@+id/chongzhi"
                  android:drawablePadding="8dp"
                  android:textColor="@color/textColor"
                  android:textSize="16sp"
                  android:gravity="center"
                  android:drawableTop="@drawable/down"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:gravity="center"
                  android:text="提现"
                  android:drawablePadding="8dp"
                  android:textColor="@color/textColor"
                  android:textSize="16sp"
                  android:id="@+id/tixian"
                  android:drawableTop="@drawable/up"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:gravity="center"
                  android:id="@+id/hongbao"
                  android:drawableTop="@drawable/message"
                  android:layout_weight="1"
                  android:drawablePadding="8dp"
                  android:text="红包"
                  android:textColor="@color/textColor"
                  android:textSize="16sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>



</LinearLayout>