<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/gray"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/top"
                    android:layout_height="@dimen/height_top_bar">
        <ImageView android:layout_width="wrap_content"
                  android:src="@drawable/back"
                  android:onClick="back"
                  android:padding="8dp"
                  android:layout_centerVertical="true"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="推荐股权"
                  android:textColor="@color/white"
                  android:textSize="18sp"
                  android:layout_centerInParent="true"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>

    <com.xiaogang.yixiang.widget.ReboundScrollView android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:id="@+id/profile"
                            android:background="@color/white"
                            android:layout_height="wrap_content">
                <ImageView android:layout_width="50dp"
                           android:scaleType="centerCrop"
                           android:id="@+id/mine_head"
                           android:src="@drawable/head"
                           android:layout_centerVertical="true"
                           android:layout_height="50dp"/>
                <TextView android:layout_width="wrap_content"
                          android:text="我是刘虎"
                          android:textColor="@color/textColor"
                          android:layout_marginTop="5dp"
                          android:id="@+id/mine_name"
                          android:layout_marginLeft="8dp"
                          android:layout_toRightOf="@+id/mine_head"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="我是移享平台合伙人"
                          android:textColor="@color/textColor"
                          android:layout_marginTop="5dp"
                          android:layout_alignBottom="@+id/mine_head"
                          android:layout_marginLeft="8dp"
                          android:layout_toRightOf="@+id/mine_head"
                          android:layout_height="wrap_content"/>
            </RelativeLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:background="@drawable/baise_one"
                          android:orientation="vertical"
                          android:layout_marginTop="5dp"
                          android:layout_marginLeft="8dp"
                          android:layout_marginRight="8dp"
                          android:layout_height="80dp">
                <TextView android:layout_width="match_parent"
                          android:text="推荐理由"
                          android:textColor="@color/textColor"
                          android:layout_gravity="center"
                          android:padding="8dp"
                          android:gravity="center"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:background="@drawable/baise_one"
                          android:orientation="vertical"
                          android:layout_marginTop="5dp"
                          android:layout_marginLeft="8dp"
                          android:layout_marginRight="8dp"
                          android:layout_height="80dp">
                <TextView android:layout_width="match_parent"
                          android:text="奖股规则"
                          android:textColor="@color/textColor"
                          android:layout_gravity="center"
                          android:padding="8dp"
                          android:gravity="center"
                          android:layout_height="wrap_content"/>
            </LinearLayout>


            <ImageView android:layout_width="match_parent"
                       android:src="@drawable/erweima"
                       android:layout_marginTop="20dp"
                       android:layout_height="80dp"/>
            <TextView android:layout_width="match_parent"
                      android:text="长按识别图中二维码"
                      android:gravity="center"
                      android:padding="8dp"
                      android:textSize="12sp"
                      android:textColor="@color/red"
                      android:layout_height="wrap_content"/>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="120dp"
                          android:text="链接分享"
                          android:textColor="@color/textColor"
                          android:textSize="12sp"
                          android:gravity="center"
                          android:paddingLeft="22dp"
                          android:background="@drawable/left_one"
                          android:layout_height="35dp"/>
                <TextView android:layout_width="120dp"
                          android:layout_marginLeft="8dp"
                          android:text="图片分享"
                          android:textColor="@color/textColor"
                          android:textSize="12sp"
                          android:gravity="center"
                          android:paddingLeft="22dp"
                          android:background="@drawable/left_one"
                          android:layout_height="35dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.xiaogang.yixiang.widget.ReboundScrollView>


</LinearLayout>